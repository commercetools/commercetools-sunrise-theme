<!-- start common/header.hbs -->
<div class="navbar navbar-fixed-top">

  <div class="header">
    <header class="container">
      <div class="row">
        <div class="col-xs-12">
          <ul class="nav-list">

            <!-- Toggle the menu on mobile -->
            <li class="list-item-nav-toggle">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </li>
            <!-- End -->

            <!-- Toggles the search field on mobile / not visible on desktop -->
            <li class="list-item-search">
              <button type="button" class="search-toggle icon-magnifying-glass">
                <span class="sr-only">{{i18n "main:header.search"}}</span>
              </button>
            </li>
            <!-- End -->

            <li class="list-item-store">
              <a href="{{@root.meta._links.storeLocator.href}}" class="store-select icon-marker">
                <span class="hidden-xs">{{i18n "main:header.stores"}}</span>
              </a>
            </li>

            <li class="list-item-help">
              <a href="{{@root.meta._links.help.href}}" class="link-help">{{i18n "main:header.help"}}</a>
            </li>

            <li class="list-item-call">
              <a href="tel:0044123456000" class="link-hotline">{{i18n "main:header.callUs" phoneNumber="+44 123 456 000"}}</a>
            </li>

            <li class="list-item-bag">
              {{> common/mini-cart miniCart=header.miniCart}}
            </li>

            {{#if @root.meta.user.loggedIn}}
                <li class="list-item-user">
                    <a href="{{@root.meta._links.logOut.href}}" class="link-user">
                        <span>{{i18n "main:header.signOut"}}</span>
                    </a>
                </li>
                <li class="list-item-user">
                    <a href="{{@root.meta._links.myAccount.href}}" class="link-user icon-user">
                        <span class="hidden-xs hidden-sm">{{@root.meta.user.name}}</span>
                    </a>
                </li>
            {{else}}
                <li class="list-item-user">
                    <a href="{{@root.meta._links.signIn.href}}" class="link-user icon-user">
                        <span class="hidden-xs hidden-sm">{{i18n "main:header.signIn"}}</span>
                    </a>
                </li>
            {{/if}}

            {{#if header.location}}
            <li class="list-item-location clearfix">
              {{> common/location-selector location=header.location}}
            </li>
            {{/if}}
          </ul>
        </div>
      </div>
    </header>
  </div>

  <div id="navigation" class="container">
    <div class="row logo-search">
      <div class="col-sm-8">
        {{> common/logo}}
      </div>
      <div class="col-sm-4">
        {{> common/search}}
      </div>
    </div>

    <div class="row">
      <div class="dropdown-megamenu navbar navbar-default">
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            {{> common/nav-menu navMenu=header.navMenu}}
            {{#if header.location}}
            <li class="visible-xs location-xs">
              {{> common/location-selector-mobile location=header.location}}
            </li>
            {{/if}}
          </ul>
          {{> common/nav-menu-extension navMenu=header.navMenu}}
        </div>
      </div>
    </div>
  </div>
</div>

{{> common/alert-overlay}}
<!-- end common/header.hbs -->
<!-- end common/header.hbs -->
