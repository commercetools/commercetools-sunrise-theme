
<!DOCTYPE html>
<html lang="en">

<head>
  {{> common/htmlhead}}
</head>

<body>
  <div class="darkbg hidden"></div>
  {{> common/header}}
  <div class="my-orders">
    <div class="container">
      <div class="my-account-title">
        <span class="my-account-title-text icon-user">{{content.pageTitle}}</span>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div class="my-orders-wrapper">
            <div class="row">
              <div class="col-sm-3">
                <div class="my-account-sidebar">
                  <div class="my-account-sidebar-items">
                    <a href="{{content.sidebarItemOne.url}}">{{content.sidebarItemOne.text}}</a>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="{{content.sidebarItemTwo.url}}">{{content.sidebarItemTwo.text}}</a>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="{{content.sidebarItemThree.url}}">{{content.sidebarItemThree.text}}</a>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="{{content.sidebarItemFour.url}}">{{content.sidebarItemFour.text}}</a>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="{{content.sidebarItemFive.url}}">{{content.sidebarItemFive.text}}</a>
                  </div>
                  <div class="my-account-sidebar-items active clearfix">
                    <a href="{{content.sidebarItemSix.url}}">
                      <span><img class="sidebar-wishlist-heart hidden-sm" src="{{meta.assetsPath}}/img/heart-1.png" alt="heart icon"></span>{{content.sidebarItemSix.text}}<span class="sidebar-wishlist-quantity hidden-sm">{{content.sidebarItemSix.wishlistItems}}</span>
                    </a>
                  </div>
                  <div class="my-orders-order-content visible-xs">
                    <div class="row">
                      <div class="col-sm-12">
                        <div class="my-orders-title text-center">
                          <span class="my-account-wishlist-items-number">{{content.itemsInTotal}}</span>
                          <div class="my-account-wishlist-clear-btn">
                            <button>{{content.clearWishlistBtn}}</button>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="my-account-wishlist-items-wrapper">
                      <div class="row">
                        {{#each content.products.list}}
                          <div class="col-xs-12 col-sm-6 col-md-4">
                            <div class="my-account-wishlist-item-wrapper">
                              {{> catalog/product-thumbnail context=..}}
                            </div>
                            <div class="my-account-wishlist-remove-btn">
                              <button>{{../content.removeBtn}}</button>
                            </div>
                          </div>
                        {{/each}}
                      </div>
                    </div>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="{{content.sidebarItemSeven.url}}">{{content.sidebarItemSeven.text}}</a>
                  </div>
                </div>
              </div>
              <div class="col-sm-9">
                <div class="my-orders-order-content hidden-xs">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="my-orders-title">
                        <span>{{content.contentTitle}}</span>
                        <span class="my-account-wishlist-items-number">{{content.itemsInTotal}}</span>
                      </div>
                    </div>
                  </div>
                  <div class="my-account-wishlist-pagination">
                    <div class="row">
                      <div class="col-sm-4">
                        <div class="my-account-wishlist-clear">
                          <button>{{content.clearWishlistBtn}}</button>
                        </div>
                      </div>
                      <div class="col-sm-4 text-center pagination">
                        <ul class="page-numbers">
                          {{> catalog/pagination}}
                        </ul>
                      </div>
                      <div class="col-sm-4">
                        <div class="my-account-wishlist-per-page">
                          <span class="hidden-sm">{{content.display.title}}</span>
                          <select>
                            {{#each content.display.list}}
                              <option value="{{value}}" {{#if selected}}selected{{/if}}>{{name}}</option>
                            {{/each}}
                          </select>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="my-account-wishlist-items-wrapper">
                    <div class="row">
                      {{#each content.products.list}}
                        <div class="col-xs-12 col-sm-6 col-md-4">
                          {{> catalog/product-thumbnail context=..}}
                          <div class="my-account-wishlist-remove-btn">
                            <button>{{../content.removeBtn}}</button>
                          </div>
                        </div>
                      {{/each}}
                    </div>
                  </div>
                  <div class="my-account-wishlist-pagination-bottom">
                    <div class="row">
                      <div class="col-sm-12 text-center pagination">
                        <ul class="page-numbers">
                          {{> catalog/pagination}}
                        </ul>
                      </div>
                    </div>
                  </div>
                  <div class="my-account-wishlist-clear-btn">
                    <button>{{content.clearWishlistBtn}}</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{!-- {{> catalog/wishlist}} --}}
  {{> common/footer}}
  {{> common/htmlscripts}}
</body>

</html>
