<!DOCTYPE html>
<html lang="en">

<head>
  {{> common/htmlhead}}
</head>

<body>
  <div class="darkbg hidden"></div>
  {{> common/header}}
  <div class="my-account">
    <div class="container">
      <div class="my-account-title">
        <span class="my-account-title-text icon-user">{{i18n "my-account:myAccount.title"}}</span>
      </div>
      <div class="row">
        <div class="col-sm-9">
          <div class="my-account-content">
            <div class="row">
              <div id="my-account-desktop-content" class="col-sm-12">
                <div class="change-password">
                  <div class="change-password-wrapper">
                    <div class="personal-details-title">
                      <span>{{i18n "my-account:resetPassword.title"}}</span>
                      <span class="pull-right required-text">{{i18n "main:form.required"}}*</span>
                    </div>
                    <form id="form-change-password" action="{{content.resetPasswordUrl}}" method="POST">
                      <input type="hidden" name="csrfToken" value="{{@root.meta.csrfToken}}"/>
                      <div class="row">
                        {{> form/global-messages messages=content.resetPasswordForm.messages}}
                        {{> form/global-errors errors=content.resetPasswordForm.errors}}
                      </div>
                      <div class="row">
                        <div class="col-sm-6">
                          <div class="form-sections">
                            <span class="form-labels">{{i18n "my-account:resetPassword.newPasswordLabelTxt"}}*</span><br>
                            <input name="newPassword" class="form-inputs" type="password">
                          </div>
                        </div>
                        <div class="col-sm-6">
                          <div class="form-sections">
                            <span class="form-labels">{{i18n "my-account:resetPassword.confirmPasswordLabelTxt"}}*</span><br>
                            <input name="confirmPassword" class="form-inputs" type="password">
                          </div>
                        </div>
                      </div>
                      <hr class="light-grey-hr">
                      <div class="personal-details-edit-btn">
                        <span>
                          <button type="submit" class="update-btn password-change-btn">
                            {{i18n "my-account:resetPassword.resetBtn"}}
                          </button>
                        </span>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{> common/footer}}
  {{> common/htmlscripts}}
</body>

</html>
