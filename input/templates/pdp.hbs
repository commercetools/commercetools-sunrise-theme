<!DOCTYPE html>
<html lang="en">

<head>
  {{> common/htmlhead}}
</head>

<body>
  <div class="darkbg hidden"></div>
  {{> common/header}}
  <div class="pdp-page">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 breadcrumb-col">
          {{> catalog/breadcrumb}}
        </div>
      </div>
      <div class="row product-info-row-pdp">
        <div class="col-md-4 col-md-offset-1 col-sm-6">
          {{> catalog/gallery}}
        </div>
        <div class="col-sm-6 product-description">
          {{> catalog/product-detail}}
        </div>
      </div>
    </div>
  </div>

  <div class="pdp-page-review">
    <div class="container">
      {{> catalog/suggestions}}
      <hr class="hr">
      {{> catalog/reviews}}
    </div>
  </div>
  {{> catalog/wishlist}}
  {{> common/footer}}
  {{> common/htmlscripts}}
</body>

</html>
