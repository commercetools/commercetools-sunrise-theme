<!DOCTYPE html>
<html lang="en">

<head>
  {{> common/htmlhead}}
</head>

<body>
  <div class="darkbg hidden"></div>
  {{> common/header}}
  <div class="payment-details">
    <div class="container">
      <div class="my-account-title">
        <span class="my-account-title-text icon-user">{{content.pageTitle}}</span>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div class="payment-details-wrapper">
            <div class="row">
              <div class="col-sm-3">
                <div class="my-account-sidebar">
                  <div class="my-account-sidebar-items">
                    <a href="{{content.sidebarItemOne.url}}">{{content.sidebarItemOne.text}}</a>
                  </div>
                  <div class="my-account-sidebar-items active">
                    <a href="{{content.sidebarItemTwo.url}}">{{content.sidebarItemTwo.text}}</a>
                  </div>
                  <div class="address-book-content visible-xs">
                    <div class="row hidden-xs">
                      <div class="col-sm-12">
                        <div class="address-book-title">
                          {{content.contentTitle}}
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-sm-6">
                        <div class="box-addresses-title">
                          {{content.defaultAddressesTitle}}
                        </div>
                        <div class="address-book-dark-box">
                          <div class="address-book-dark-box-title">{{content.shippingAddress.title}}</div>
                          <div>{{content.shippingAddress.name}}</div>
                          <div>{{content.shippingAddress.address}}</div>
                          <div>{{content.shippingAddress.region}}</div>
                          <div>{{content.shippingAddress.postalCode}}</div>
                          <div>{{content.shippingAddress.country}}</div>
                          <div class="address-box-edit-btn">
                            <button><img src="{{meta.assetsPath}}/img/edit-1.png" alt="edit icon">{{content.shippingAddress.edit}}</button>
                          </div>
                        </div>
                        <div class="address-book-dark-box">
                          <div class="address-book-dark-box-title">{{content.billingAddress.title}}</div>
                          <div>{{content.billingAddress.name}}</div>
                          <div>{{content.billingAddress.address}}</div>
                          <div>{{content.billingAddress.region}}</div>
                          <div>{{content.billingAddress.postalCode}}</div>
                          <div>{{content.billingAddress.country}}</div>
                          <div class="address-box-edit-btn">
                            <button><img src="{{meta.assetsPath}}/img/edit-1.png" alt="edit icon">{{content.billingAddress.edit}}</button>
                          </div>
                        </div>
                        <div class="row visible-xs">
                          <div class="col-sm-12">
                            <div class="add-new-address-btn">
                              <button>{{content.addNewAddressBtn}}</button>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="box-addresses-title">
                          {{content.secondaryAddressTitle}}
                        </div>
                        <div class="address-book-white-box">
                          <div>{{content.secondaryAddress.name}}</div>
                          <div>{{content.secondaryAddress.address}}</div>
                          <div>{{content.secondaryAddress.region}}</div>
                          <div>{{content.secondaryAddress.postalCode}}</div>
                          <div>{{content.secondaryAddress.country}}</div>
                          <div class="address-book-edit-delete">
                            <div><button><img src="{{meta.assetsPath}}/img/edit-1.png" alt="">{{content.secondaryAddress.edit}}</button></div>
                            <div><button><img src="{{meta.assetsPath}}/img/delete-60px.png" alt="">{{content.secondaryAddress.delete}}</button></div>
                          </div>
                        </div>
                        <div class="box-addresses-title">
                          {{content.additionalAddressTitle}}
                        </div>
                        <div class="address-book-white-box">
                          <div>{{content.additionalAddress.name}}</div>
                          <div>{{content.additionalAddress.address}}</div>
                          <div>{{content.additionalAddress.region}}</div>
                          <div>{{content.additionalAddress.postalCode}}</div>
                          <div>{{content.additionalAddress.country}}</div>
                          <div class="address-book-edit-delete">
                            <div><button><img src="{{meta.assetsPath}}/img/edit-1.png" alt="">{{content.additionalAddress.edit}}</button></div>
                            <div><button><img src="{{meta.assetsPath}}/img/delete-60px.png" alt="">{{content.additionalAddress.delete}}</button></div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row hidden-xs">
                      <div class="col-sm-12">
                        <div class="add-new-address-btn">
                          <button>{{content.addNewAddressBtn}}</button>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="{{content.sidebarItemThree.url}}">{{content.sidebarItemThree.text}}</a>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="{{content.sidebarItemFour.url}}">{{content.sidebarItemFour.text}}</a>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="{{content.sidebarItemFive.url}}">{{content.sidebarItemFive.text}}</a>
                  </div>
                  <div class="my-account-sidebar-items clearfix">
                    <a href="{{content.sidebarItemSix.url}}">
                      <span><img class="sidebar-wishlist-heart hidden-sm" src="{{meta.assetsPath}}/img/heart-1.png" alt="heart icon"></span>{{content.sidebarItemSix.text}}<span class="sidebar-wishlist-quantity hidden-sm">{{content.sidebarItemSix.wishlistItems}}</span>
                    </a>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="{{content.sidebarItemSeven.url}}">{{content.sidebarItemSeven.text}}</a>
                  </div>
                </div>
              </div>
              <div class="col-sm-9">
                <div class="payment-details-content">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="address-book-title">
                        {{content.contentTitle}}
                      </div>
                    </div>
                  </div>
                  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{!-- {{> catalog/wishlist}} --}}
  {{> common/footer}}
  {{> common/htmlscripts}}
</body>

</html>
