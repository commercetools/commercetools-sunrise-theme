<form id="form-add-to-cart{{index}}" name="add-to-cart" method="post" action="{{product.addToCartUrl}}" onsubmit="return validateAddToCardForm()">
  <input type="hidden" name="productId" value="{{product.data.id}}">
  <input type="hidden" name="variantId" value="{{product.data.variantId}}">
  <input type="hidden" name="productSku" value="{{product.data.sku}}">
  <input type="hidden" name="productSlug" value="{{product.data.slug}}">

  <div class="row select-row">
    <ul class="list-inline">
      {{#each product.data.attributes}}
        {{> catalog/product-attribute attribute=this meta=../meta variants=../product.data.variants identifiers=../product.data.variantIdentifiers}}
      {{/each}}
      <li class="size-guide-li">
        {{> catalog/size-guide}}
      </li>
    </ul>
  </div>
  <div class="row">
    <ul class="product-actions-list list-inline">
      <li class="bag-items-li">
        <select value="" name="quantity" class="bag-items" required>
          {{#each meta.bagItems}}
          <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
      </li>
      <li>
        <button type="submit" class="add-to-bag text-center">
          <img class="bag-thumb" src="{{meta.assetsPath}}img/hand-bag-2-black.png" alt="{{i18n "catalog:cart.add"}}">
          {{i18n "catalog:cart.add"}}
        </button>
      </li>
    </ul>
  </div>
</form>
