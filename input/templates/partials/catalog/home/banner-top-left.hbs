<div class="aspect-ratio aspect-ratio--4to3">
  <picture>
    <source srcset="{{cms "content.bannerTopLeft.imageLarge"}}" media="(min-width: 1200px)">
    <source srcset="{{cms "content.bannerTopLeft.imageMedium"}}" media="(min-width: 768px)">
    <img src="{{cms "content.bannerTopLeft.imageSmall"}}" class="img-responsive">
  </picture>
</div>

<div class="banner-text">
  <h4 class="banner-title">{{{cms "content.bannerTopLeft.title"}}}</h4>
  <p class="banner-paragraph">{{{cms "content.bannerTopLeft.subtitle"}}}</p>
  <a href="{{cms "content.bannerTopLeft.linkHref"}}" class="btn banner-btn">
    {{cms "content.bannerTopLeft.linkText"}}
  </a>
</div>
