    <span class="sr-only">{{i18n "content.filters.close"}}</span>
  </button>
  <div class="row">
    <div class="col-sm-12">
      <div class="row">
        <div class="col-sm-12 ">
          <p class="filter-products"><b>{{i18n "content.filters.title"}}</b></p>
        </div>
      </div>
      {{> catalog/facets facets=content.facets}}
    </div>
  </div>
</div>
