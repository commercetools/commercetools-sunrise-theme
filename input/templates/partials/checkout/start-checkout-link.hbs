<!-- start start-checkout-link.hbs -->
{{#if bottom}}
  {{#if mobile}}
      <div class="col-sm-6 col-xs-12 visible-xs">
  {{else}}
      <div class="col-sm-6 col-xs-12 hidden-xs">
  {{/if}}
{{else}}
    <div class="col-sm-4 col-xs-12">
{{/if}}

    <div class="checkout-now{{#if bottom}}-bottom{{/if}}">
        <a href="{{meta._links.checkout.href}}">
            <button class="pull-right text-uppercase checkout-now-btn"{{#if id}}{{id}}{{/if}}>{{i18n "common.checkout"}}</button>
        </a>
    </div>
</div>
<!-- end start-checkout-link.hbs -->
