<div class="shipping-info">
    <span class="text-uppercase payment-info-title">{{i18n "checkout.paymentInformation"}}</span>
    <span class="pull-right required-fields">{{i18n "form.required"}}*</span>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="payment-options-title">
            <span>{{content.paymentOptionTitle}}</span>
        </div>
    </div>
</div>
<div class="row">
  {{#each content.paymentOption.list}}
      <div class="col-lg-3 col-md-4 col-sm-4">
          <div class="payment-type">
              <label for="{{id}}">
                {{#if image}}<img src="{{image}}" class="payment-type-icon" alt="{{text}}">{{/if}}<br>
                  <input id="{{id}}" class="payment-text" type="radio" name="payment" value="{{value}}" {{#if selected}}checked{{/if}}>{{text}}
              </label>
          </div>
      </div>
  {{/each}}
</div>
<div class="row" id="credit-card-input-field">
    <div class="col-md-6 col-sm-8">
        <div class="col-sm-12">
            <div class="name-on-card">
                <span class="text-uppercase">{{content.cardName}}*</span><br>
                <input id="payment-cardname-input" class="checkout-input-field" type="text">
            </div>
          {{> common/required-error-message}}
        </div>
        <div class="col-sm-12">
            <div class="card-number">
                <span class="text-uppercase">{{content.cardNumber}}*</span><br>
                <input id="payment-cardnumber-input" class="checkout-input-field card-number-input" type="text">
            </div>
        </div>
        <div class="col-sm-6">
            <div class="expiry-date">
                <span class="text-uppercase">{{content.expiryDateTitle}}*</span><br>
                <select id="payment-expirymonth-select" class="checkout-dropdown">
                  {{#each content.expiryDate.list}}
                      <option value="{{value}}" {{#if selected}}selected{{/if}}>{{text}}</option>
                  {{/each}}
                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="expiry-year">
                <br>
                <select id="payment-expiryyear-select" class="checkout-dropdown">
                  {{#each content.year.list}}
                      <option value="{{value}}" {{#if selected}}selected{{/if}}>{{text}}</option>
                  {{/each}}
                </select>
            </div>
        </div>
        <div class="col-sm-7">
            <div class="security-code">
                <span class="text-uppercase">{{content.securityCode}}*</span><br>
                <input id="payment-securitycode-input" class="checkout-input-field security-code-input" type="text">
                <span class="security-code-info" title="{{content.securityCodeTooltip}}"><img class="info-icon" src="{{meta.assetsPath}}img/information.png" alt="information icon"></span>
            </div>
        </div>
    </div>
</div>
<hr class="hr-checkout-payment">
<div class="row hidden-xs">
    <div class="col-sm-8 col-md-6">
        <div>
            <a href="#" id="payment-continue-checkout-btn" class="btn text-uppercase checkout-checkout-btn">{{i18n "checkout.continueCheckout"}}</a>
        </div>
    </div>
</div>

<div class="row visible-xs">
    <div class="col-sm-6">
        <div>
            <a href="#" id="payment-continue-checkout-btn-xs" class="btn text-uppercase checkout-checkout-btn">{{i18n "checkout.continueCheckout"}}</a>
        </div>
    </div>
</div>
